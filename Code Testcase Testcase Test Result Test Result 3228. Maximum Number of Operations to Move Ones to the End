class Solution {
    public int maxOperations(String s) {
        int operations = 0;
        int onesCount = 0;
        boolean inZeroBlock = false;

        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == '1') {
                onesCount++;
                inZeroBlock = false;
            } else {
                if (!inZeroBlock) {
                    operations += onesCount;
                    inZeroBlock = true;
                }
            }
        }

        return operations;
    }
}
